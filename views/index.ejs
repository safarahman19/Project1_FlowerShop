<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/Content/app.css' />
    <meta name="viewport" content="width-device-width, intial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;1000&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Calibri:wght@400;1000&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" rel="stylesheet">
  </head>
  <body>
      <header>
        <!--NavBar-->
        <nav class="navbar navbar-expand-lg custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand custom-navbar-title" href="/">FLOWER SHOP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                     <ul class="navbar-nav ms-3 mb-2 mb-lg-0">
                         <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/flowers">Types of Flowers</a>
                        </li>
                    </ul>
                    <form class="d-flex ms-auto" role="search">
                      <% if (!displayName) { %>
                        <a class="btn btn-outline-primary me-2" href="/login">Login</a>
                        <a class="btn btn-outline-success" href="/register">Register</a>
                      <% } else { %>
                        <span class="me-2">Welcome, <%= displayName %>!</span>
                        <a class="btn btn-outline-danger" href="/logout">Logout</a>
                      <% } %>
                        <button class="login-btn" type="button" data-bs-toggle="modal" data-bs-target="#loginModal">LOG IN</button>
                        
                    </form>
                </div>
            </div>
        </nav>
    </header>

<!--Hero Section -->
    <div class="jumbotron text-center mt-4">
      <div class="light-pink-block">
        <h1 class="display-4">Welcome to the Flower Shop!</h1>
        <p class="lead">Shop for the perfect flowers for every occasion.</p>
        <a class="btn btn-primary btn-lg" href="/flowers" role="button">Shop Flowers</a>
      </div>
    </div>

  <!--Flower Table -->

    <div class="container mt-5">
      <h2 class="text-center">Our Flower Collection</h2>
      <p class="text-center">We offer a great variety to choose from.</p>
      <a href="/flowers/new" class="btn btn-success mb-3">Add a New Flower</a>

      <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Color</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% flowers.forEach(flower => { %>
          <tr>
            <td><%= flower.name %></td>
            <td><%= flower.color %></td>
            <td><%= flower.price %></td>
            <td><%= flower.Quantity %></td>
            <td>
              <a href="/flowerslist/edit/<%= flower._id %>" class="btn btn-primary btn-sm me-2">
              <i class="bi bi-pencil-square"></i> Edit
              </a>
              <form action="/flowers/delete/<%= flower._id %>" method="POST" style="display:inline;">
                <button class="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<!--Login Modal -->
  <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="loginModalLabel">Log In</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" required autocomplete="username">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required autocomplete="current-password">
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
          </form>
        </div>
        <div class="modal-footer">
          <p>Don't have an account? <a href="/register">Sign Up</a></p>
        </div>
      </div>
    </div>
  </div>
  
  <footer class = "custom-footer text-white text-center py-3 mt-4">
    <p>&copy; 2024 Flower Shop. All Rights Reserved.</p>
  </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>

